<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kirp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context=".MainActivity$PlaceholderFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/imgButton1"
            android:layout_width="124dp"
            android:layout_height="93dp"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:onClick="openVault"
            android:scaleType="fitCenter"
            android:src="@drawable/cats" />

        <TextView
            android:id="@+id/myImageViewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imgButton1"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/imgButton1"
            android:gravity="center"
            android:text="Categories"
            android:textSize="18dp"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/imgButton2"
            android:layout_width="124dp"
            android:layout_height="93dp"
            android:paddingLeft="10dp"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:onClick="encryptFile"
            android:scaleType="fitCenter"

            android:src="@drawable/enc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imgButton2"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/imgButton2"
            android:gravity="center"
            android:textSize="18dp"
            android:text="Encrypt File"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/imgButton3"
            android:layout_width="124dp"
            android:layout_height="93dp"
            android:layout_centerInParent="true"
            android:paddingLeft="10dp"
            android:background="@android:color/transparent"
            android:onClick="decryptFile"
            android:scaleType="fitCenter"
            android:src="@drawable/dec" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imgButton3"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/imgButton3"
            android:gravity="center"
            android:text="Decrypt File"
            android:textSize="18dp"
            android:textColor="@color/white" />
    </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
